<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#03A9F4</item>
        <item name="textContent">@string/home_theme_title</item>
        <item name="backgroundcolor">#FF99F1F2</item>
        <item name="android:statusBarColor">@color/primary_text</item>
        <item name="android:navigationBarColor">@color/primary_text</item>
        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <!-- Away application theme. -->
    <style name="AppAwayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF02A355</item>
        <item name="colorPrimaryDark">#FF016133</item>
        <item name="colorAccent">#FF0AFF89</item>
        <item name="textContent">@string/away_theme_title</item>
        <item name="backgroundcolor">#FFA2F299</item>
        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <!-- Theme for menu items on navigation draver-->
    <style name="themeMenu">
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemPaddingLeft">16dp</item>
    </style>

    <!-- Divider for items on players list -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Theme for Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="android:windowBackground">@drawable/backgroundsplash</item>
    </style>

    <!-- Window animation transition -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
